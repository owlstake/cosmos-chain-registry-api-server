# Environment variables for Docker production deployment
# Copy this file to .env and modify values for your environment

# Server configuration
PORT=3000
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Swagger documentation
ENABLE_SWAGGER=false

# Cache configuration
CACHE_TTL=3600

# Sync configuration  
SYNC_INTERVAL=86400

# Security configuration
ALLOWED_ORIGINS=*

# Admin authentication for sync endpoint
# IMPORTANT: Change these values in production!
ADMIN_API_KEY=cosmos-production-admin-key-change-this-immediately
ADMIN_IPS=127.0.0.1,::1,172.16.0.0/12

# Optional: General API keys (uncomment to enable)
# API_KEYS=client-key-1,client-key-2,client-key-3

# Rate limiting (optional overrides)
# RATE_LIMIT_WINDOW=900000    # 15 minutes in ms
# RATE_LIMIT_MAX=1000         # max requests per window
# SYNC_RATE_LIMIT_MAX=5       # max sync requests per hour
