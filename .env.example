# Environment variables for Cosmos Chain Registry API Server

# Server configuration
PORT=3000
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Swagger documentation
ENABLE_SWAGGER=false

# Cache configuration
CACHE_TTL=3600

# Sync configuration  
SYNC_INTERVAL=86400

# Security configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# Admin authentication for sync endpoint
ADMIN_API_KEY=cosmos-admin-secret-key-change-in-production
ADMIN_IPS=127.0.0.1,::1

# Optional: API keys for general API access (comma-separated)
# API_KEYS=your-secret-api-key-1,your-secret-api-key-2

# Rate limiting (optional overrides)
# RATE_LIMIT_WINDOW=900000    # 15 minutes in ms
# RATE_LIMIT_MAX=1000         # max requests per window
# SYNC_RATE_LIMIT_MAX=5       # max sync requests per hour
